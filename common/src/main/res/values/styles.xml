<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="DialogStyle" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:divider">@null</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="LoadingProgessStyle" parent="@style/DialogStyle">
        <item name="android:windowBackground">@drawable/toast_frame</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/color_f2f2f2</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="vertical_divider">
        <item name="android:layout_width">1px</item>
        <item name="android:background">@color/color_f2f2f2</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
